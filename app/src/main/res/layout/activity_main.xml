<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fenetrePrincipal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/accueil"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="0dp"
    android:paddingTop="0dp"
    android:paddingRight="0dp"
    android:paddingBottom="0dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonJouer"
        android:layout_width="154px"
        android:layout_height="71px"
        android:background="@drawable/coutonbouton"
        android:onClick="ActivityOptionJeu"
        android:text="JOUER"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        tools:ignore="MissingConstraints"
        tools:text="Jouer" />
        <!--android:layout_centerInParent="true"-->
        <!--android:layout_marginStart="8dp"-->
        <!--android:layout_marginTop="352dp"-->
        <!--android:layout_marginEnd="8dp"-->

    <Button
        android:id="@+id/buttonEditplateau"
        android:layout_width="156px"
        android:layout_height="75px"
        android:background="@drawable/coutonbouton"
        android:onClick="allerEditPlateau"
        android:text="Editer un plateau"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        tools:ignore="MissingConstraints" />
        <!--android:layout_marginStart="8dp"-->
        <!--android:layout_marginEnd="8dp"-->
        <!--android:layout_marginBottom="32dp"-->


    <Button
        android:id="@+id/buttonQuitter"
        android:layout_width="154px"
        android:layout_height="71px"
        android:background="@drawable/coutonbouton"
        android:onClick="QuitterLeJeu"
        android:text="Quitter le jeu"
        android:textColor="@android:color/white"
        tools:ignore="MissingConstraints" />
        <!--android:layout_centerInParent="true"-->
        <!--android:layout_marginStart="8dp"-->
        <!--android:layout_marginTop="8dp"-->
        <!--android:layout_marginEnd="8dp"-->
        <!--android:layout_marginBottom="8dp"-->

    <Button
        android:id="@+id/buttonOption"
        android:layout_width="54dp"
        android:layout_height="53dp"
        android:layout_marginStart="28dp"
        android:background="@drawable/traioption"
        android:onClick="ActivityOption"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="33dp" />


</android.support.constraint.ConstraintLayout>