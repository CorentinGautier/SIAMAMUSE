<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fenetrePrincipal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/accueil"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="0dp"
    android:paddingTop="0dp"
    android:paddingRight="0dp"
    android:paddingBottom="0dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonJouer"
        android:layout_width="154px"
        android:layout_height="71px"
        android:background="@drawable/coutonbouton"
        android:onClick="ActivityOptionJeu"
        android:text="JOUER"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        tools:ignore="MissingConstraints"
        tools:text="Jouer" />

    <Button
        android:id="@+id/buttonCredit"
        android:layout_width="154px"
        android:layout_height="71px"
        android:background="@drawable/coutonbouton"
        android:onClick="ActivityCredit"
        android:text="CREDITS"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        tools:ignore="MissingConstraints"
        tools:text="Credit" />

    <Button
        android:id="@+id/buttonEditplateau"
        android:layout_width="156px"
        android:layout_height="75px"
        android:background="@drawable/coutonbouton"
        android:text="Editer un plateau"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        tools:ignore="MissingConstraints" />
        <!--android:onClick="allerEditPlateau"-->

    <Button
        android:id="@+id/buttonQuitter"
        android:layout_width="154px"
        android:layout_height="71px"
        android:background="@drawable/coutonbouton"
        android:onClick="QuitterLeJeu"
        android:text="Quitter"
        android:textColor="@android:color/white"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageCadenas"
        android:layout_width="78dp"
        android:layout_height="77dp"
        app:srcCompat="@drawable/cadenas" />

</android.support.constraint.ConstraintLayout>